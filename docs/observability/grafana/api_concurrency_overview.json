{
  "title": "API Concurrency Overview",
  "uid": "api-concurrency-overview",
  "schemaVersion": 36,
  "version": 1,
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Global Queue Depth",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "aurum_api_global_queue_depth"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 5},
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "values": false
        },
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "type": "timeseries",
      "title": "Tenant Queue Depth",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "aurum_api_tenant_queue_depth",
          "legendFormat": "{{tenant}}"
        }
      ],
      "gridPos": {"x": 6, "y": 0, "w": 18, "h": 9}
    },
    {
      "type": "timeseries",
      "title": "Queue Wait p95 by Tenant",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(aurum_api_tenant_queue_wait_seconds_bucket[5m])) by (le, tenant))",
          "legendFormat": "{{tenant}}"
        }
      ],
      "gridPos": {"x": 0, "y": 5, "w": 12, "h": 9}
    },
    {
      "type": "timeseries",
      "title": "Acquire Latency p95",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(aurum_api_concurrency_acquire_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {"x": 12, "y": 5, "w": 12, "h": 9}
    },
    {
      "type": "timeseries",
      "title": "Rejections by Reason",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(aurum_api_concurrency_rejections_total[5m])) by (reason)",
          "legendFormat": "{{reason}}"
        }
      ],
      "gridPos": {"x": 0, "y": 14, "w": 24, "h": 8}
    }
  ]
}

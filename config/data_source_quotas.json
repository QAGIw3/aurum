  "data_sources": {
    "eia": {
      "name": "Energy Information Administration",
      "description": "US energy data including electricity, petroleum, natural gas, and renewable energy",
      "api_documentation": "https://www.eia.gov/opendata/",
      "quotas": {
        "requests_per_second": 10,
        "requests_per_minute": 600,
        "requests_per_hour": 36000,
        "requests_per_day": 500000,
        "concurrent_connections": 5,
        "data_transfer_limit_gb_per_month": 1000,
        "notes": "EIA API v2 limits are enforced per API key. Higher limits may be available for registered applications."
      },
      "optimal_settings": {
        "batch_size": 5000,
        "max_concurrent_jobs": 3,
        "retry_backoff_seconds": 2,
        "rate_limit_sleep_ms": 100,
        "connection_timeout_seconds": 30,
        "read_timeout_seconds": 120,
        "max_retries": 5,
        "retry_strategy": "exponential_backoff",
        "parallelism": 4,
        "notes": "Optimal settings based on performance testing. Batch size of 5000 provides good throughput while staying within rate limits."
      },
      "cost_model": {
        "cost_per_call_usd": 0.001,
        "estimated_monthly_cost_at_scale_usd": 50,
        "notes": "Cost estimate based on 50K calls per month"
      }
    },
    "fred": {
      "name": "Federal Reserve Economic Data",
      "description": "Economic data including interest rates, employment, inflation, and financial indicators",

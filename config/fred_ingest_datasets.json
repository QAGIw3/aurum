{
  "metadata": {
    "description": "FRED Economic Data Ingestion Configuration",
    "version": "2.0.0",
    "last_updated": "2024-09-23",
    "source": "FRED API v2",
    "base_url": "https://api.stlouisfed.org/fred"
  },
  "global_settings": {
    "rate_limit_sleep_ms": 500,
    "timeout_seconds": 60,
    "retry_attempts": 7,
    "retry_backoff_ms": 3000,
    "retry_backoff_max_ms": 180000,
    "page_limit": 1000,
    "concurrent_requests": 2,
    "max_active_runs": 3,
    "pool": "api_fred",
    "schema_registry_url": "http://localhost:8081",
    "kafka_bootstrap_servers": "localhost:9092",
    "timescale_table": "fred_series_timeseries",
    "dlq_topic": "aurum.ref.fred.series.dlq.v1"
  },
  "cost_controls": {
    "daily_request_limit": 50000,
    "hourly_request_limit": 10000,
    "monthly_budget_usd": 5000.00,
    "cost_per_1000_requests": 0.005,
    "enable_dynamic_throttling": true,
    "cost_alert_thresholds": {
      "warning_percent": 75,
      "critical_percent": 90,
      "stop_percent": 100
    },
    "monitoring": {
      "enable_request_tracking": true,
      "enable_cost_estimation": true,
      "enable_usage_alerts": true,
      "alert_channels": ["#data-cost-monitoring", "#fred-alerts"],
      "cost_report_frequency_hours": 6
    }
  },
  "alerting": {
    "slack_channels": ["#data-ingestion-alerts", "#economic-data", "#data-cost-monitoring"],
    "email_recipients": ["data-team@aurum.com", "economic-team@aurum.com", "cost-monitoring@aurum.com"],
    "critical_staleness_hours": 48,
    "warning_staleness_hours": 12,
    "quality_threshold_percent": 95,
    "cost_alerts": {
      "daily_budget_warning_percent": 70,
      "daily_budget_critical_percent": 85,
      "hourly_rate_spike_percent": 150,
      "enable_cost_prediction": true,
      "cost_prediction_hours_ahead": 24
    },
    "performance_alerts": {
      "average_response_time_ms_threshold": 15000,
      "error_rate_threshold_percent": 5,
      "retry_rate_threshold_percent": 20,
      "throughput_drop_percent": 30
    },
    "data_quality_alerts": {
      "null_value_rate_threshold": 0.05,
      "outlier_rate_threshold": 0.02,
      "duplicate_rate_threshold": 0.01,
      "freshness_hours": 24
    }
  },
  "datasets": [
    {
      "source_name": "fred_dgs10",
      "series_id": "DGS10",
      "description": "10-Year Treasury Constant Maturity Rate",
      "schedule": "0 6 * * *",
      "topic_var": "aurum_fred_dgs10_topic",
      "default_topic": "aurum.ref.fred.dgs10.v1",
      "frequency": "DAILY",
      "units_var": "aurum_fred_dgs10_units",
      "default_units": "Percent",
      "seasonal_adjustment": "Not Seasonally Adjusted",
      "window_hours": 24,
      "window_days": null,
      "window_months": null,
      "window_years": null,
      "dlq_topic": "aurum.ref.fred.series.dlq.v1",
      "watermark_policy": "day"
    },
    {
      "source_name": "fred_cpiaucsl",
      "series_id": "CPIAUCSL",
      "description": "Consumer Price Index for All Urban Consumers: All Items in U.S. City Average",
      "schedule": "0 6 1 * *",
      "topic_var": "aurum_fred_cpiaucsl_topic",
      "default_topic": "aurum.ref.fred.cpiaucsl.v1",
      "frequency": "MONTHLY",
      "units_var": "aurum_fred_cpiaucsl_units",
      "default_units": "Index 1982-1984=100",
      "seasonal_adjustment": "Seasonally Adjusted",
      "window_hours": null,
      "window_days": null,
      "window_months": 1,
      "window_years": null,
      "dlq_topic": "aurum.ref.fred.series.dlq.v1",
      "watermark_policy": "month"
    },
    {
      "source_name": "fred_unrate",
      "series_id": "UNRATE",
      "description": "Civilian Unemployment Rate",
      "schedule": "0 6 1 * *",
      "topic_var": "aurum_fred_unrate_topic",
      "default_topic": "aurum.ref.fred.unrate.v1",
      "frequency": "MONTHLY",
      "units_var": "aurum_fred_unrate_units",
      "default_units": "Percent",
      "seasonal_adjustment": "Seasonally Adjusted",
      "window_hours": null,
      "window_days": null,
      "window_months": 1,
      "window_years": null,
      "dlq_topic": "aurum.ref.fred.series.dlq.v1",
      "watermark_policy": "month"
    },
    {
      "source_name": "fred_fedfunds",
      "series_id": "FEDFUNDS",
      "description": "Effective Federal Funds Rate",
      "schedule": "0 6 1 * *",
      "topic_var": "aurum_fred_fedfunds_topic",
      "default_topic": "aurum.ref.fred.fedfunds.v1",
      "frequency": "MONTHLY",
      "units_var": "aurum_fred_fedfunds_units",
      "default_units": "Percent",
      "seasonal_adjustment": "Not Seasonally Adjusted",
      "window_hours": null,
      "window_days": null,
      "window_months": 1,
      "window_years": null,
      "dlq_topic": "aurum.ref.fred.series.dlq.v1",
      "watermark_policy": "month"
    },
    {
      "source_name": "fred_gdp",
      "series_id": "GDP",
      "description": "Gross Domestic Product",
      "schedule": "0 6 1 */3 *",
      "topic_var": "aurum_fred_gdp_topic",
      "default_topic": "aurum.ref.fred.gdp.v1",
      "frequency": "QUARTERLY",
      "units_var": "aurum_fred_gdp_units",
      "default_units": "Billions of Dollars",
      "seasonal_adjustment": "Seasonally Adjusted Annual Rate",
      "window_hours": null,
      "window_days": null,
      "window_months": 3,
      "window_years": null,
      "dlq_topic": "aurum.ref.fred.series.dlq.v1",
      "watermark_policy": "month"
    }
  ]
}
# Aurum Data Ingestion Environment Configuration Template
# This file contains all environment variables for data source quotas and concurrency settings
# Copy this file to your .env.local and adjust values as needed

# =============================================================================
# EIA (Energy Information Administration) Configuration
# =============================================================================
AURUM_EIA_REQUESTS_PER_SECOND=10
AURUM_EIA_REQUESTS_PER_MINUTE=600
AURUM_EIA_BATCH_SIZE=5000
AURUM_EIA_MAX_CONCURRENT_JOBS=3
AURUM_EIA_RETRY_BACKOFF_SECONDS=2
AURUM_EIA_RATE_LIMIT_SLEEP_MS=100
AURUM_EIA_CONNECTION_TIMEOUT_SECONDS=30
AURUM_EIA_READ_TIMEOUT_SECONDS=120
AURUM_EIA_MAX_RETRIES=5
AURUM_EIA_RETRY_STRATEGY=exponential_backoff
AURUM_EIA_PARALLELISM=4

# =============================================================================
# FRED (Federal Reserve Economic Data) Configuration
# =============================================================================
AURUM_FRED_REQUESTS_PER_SECOND=100
AURUM_FRED_REQUESTS_PER_MINUTE=6000
AURUM_FRED_BATCH_SIZE=10000
AURUM_FRED_MAX_CONCURRENT_JOBS=8
AURUM_FRED_RETRY_BACKOFF_SECONDS=1
AURUM_FRED_RATE_LIMIT_SLEEP_MS=10
AURUM_FRED_CONNECTION_TIMEOUT_SECONDS=30
AURUM_FRED_READ_TIMEOUT_SECONDS=60
AURUM_FRED_MAX_RETRIES=3
AURUM_FRED_RETRY_STRATEGY=linear_backoff
AURUM_FRED_PARALLELISM=8

# =============================================================================
# CPI (Consumer Price Index via FRED) Configuration
# =============================================================================
AURUM_CPI_REQUESTS_PER_SECOND=100
AURUM_CPI_REQUESTS_PER_MINUTE=6000
AURUM_CPI_BATCH_SIZE=10000
AURUM_CPI_MAX_CONCURRENT_JOBS=6
AURUM_CPI_RETRY_BACKOFF_SECONDS=1
AURUM_CPI_RATE_LIMIT_SLEEP_MS=10
AURUM_CPI_CONNECTION_TIMEOUT_SECONDS=30
AURUM_CPI_READ_TIMEOUT_SECONDS=60
AURUM_CPI_MAX_RETRIES=3
AURUM_CPI_RETRY_STRATEGY=linear_backoff
AURUM_CPI_PARALLELISM=6

# =============================================================================
# NOAA (National Oceanic and Atmospheric Administration) Configuration
# =============================================================================
AURUM_NOAA_REQUESTS_PER_SECOND=5
AURUM_NOAA_REQUESTS_PER_MINUTE=300
AURUM_NOAA_BATCH_SIZE=1000
AURUM_NOAA_MAX_CONCURRENT_JOBS=2
AURUM_NOAA_RETRY_BACKOFF_SECONDS=5
AURUM_NOAA_RATE_LIMIT_SLEEP_MS=200
AURUM_NOAA_CONNECTION_TIMEOUT_SECONDS=60
AURUM_NOAA_READ_TIMEOUT_SECONDS=180
AURUM_NOAA_MAX_RETRIES=5
AURUM_NOAA_RETRY_STRATEGY=exponential_backoff
AURUM_NOAA_PARALLELISM=2

# =============================================================================
# ISO (Independent System Operators) Configuration
# =============================================================================
AURUM_ISO_REQUESTS_PER_SECOND=2
AURUM_ISO_REQUESTS_PER_MINUTE=120
AURUM_ISO_BATCH_SIZE=500
AURUM_ISO_MAX_CONCURRENT_JOBS=1
AURUM_ISO_RETRY_BACKOFF_SECONDS=10
AURUM_ISO_RATE_LIMIT_SLEEP_MS=500
AURUM_ISO_CONNECTION_TIMEOUT_SECONDS=90
AURUM_ISO_READ_TIMEOUT_SECONDS=300
AURUM_ISO_MAX_RETRIES=7
AURUM_ISO_RETRY_STRATEGY=exponential_backoff
AURUM_ISO_PARALLELISM=1

# =============================================================================
# Global Configuration and Defaults
# =============================================================================

# Default values for any data source not specifically configured
AURUM_GLOBAL_DEFAULT_BATCH_SIZE=1000
AURUM_GLOBAL_DEFAULT_MAX_CONCURRENT_JOBS=3
AURUM_GLOBAL_DEFAULT_RETRY_BACKOFF_SECONDS=2
AURUM_GLOBAL_DEFAULT_RATE_LIMIT_SLEEP_MS=100

# Monitoring and alerting thresholds
AURUM_GLOBAL_THROUGHPUT_WARNING_THRESHOLD=100
AURUM_GLOBAL_ERROR_RATE_WARNING_THRESHOLD=0.05
AURUM_GLOBAL_MEMORY_USAGE_WARNING_MB=500
AURUM_GLOBAL_COST_PER_GB_THRESHOLD_USD=0.10

# =============================================================================
# Infrastructure Configuration
# =============================================================================

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=aurum

# Schema Registry
SCHEMA_REGISTRY_URL=http://localhost:8081

# SeaTunnel Configuration
SEATUNNEL_HOME=/opt/seatunnel
SEATUNNEL_JVM_OPTS=-Xmx2g -Xms1g

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_EXECUTOR=LocalExecutor
AIRFLOW_PARALLELISM=32
AIRFLOW_DAG_CONCURRENCY=16
AIRFLOW_MAX_ACTIVE_RUNS_PER_DAG=3
AIRFLOW_MAX_ACTIVE_TASKS_PER_DAG=10

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=aurum
POSTGRES_USER=aurum_user
POSTGRES_PASSWORD=change_me_in_production

# ClickHouse Configuration (for analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=aurum_analytics
CLICKHOUSE_USER=aurum_user
CLICKHOUSE_PASSWORD=change_me_in_production

# =============================================================================
# API Keys and Secrets (PLACEHOLDER VALUES - REPLACE WITH ACTUAL KEYS)
# =============================================================================
# IMPORTANT: Replace with actual API keys in your .env.local file

# EIA API Key
EIA_API_KEY=your_eia_api_key_here

# FRED API Key
FRED_API_KEY=your_fred_api_key_here

# NOAA API Token
NOAA_API_TOKEN=your_noaa_api_token_here

# ISO API Keys (varies by ISO)
NYISO_API_KEY=your_nyiso_api_key_here
PJM_API_KEY=your_pjm_api_key_here
CAISO_API_KEY=your_caiso_api_key_here
MISO_API_KEY=your_miso_api_key_here
SPP_API_KEY=your_spp_api_key_here
AESO_API_KEY=your_aeso_api_key_here

# =============================================================================
# Logging and Monitoring
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Structured logging
ENABLE_STRUCTURED_LOGGING=true
LOG_TO_KAFKA=true
KAFKA_LOG_TOPIC=aurum.logs

# Metrics and monitoring
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_GATEWAY_URL=http://localhost:9091

# Health checks
HEALTH_CHECK_INTERVAL_SECONDS=30

# =============================================================================
# Development and Testing
# =============================================================================

# Development mode (enables additional logging and validation)
DEVELOPMENT_MODE=false

# Test data settings
ENABLE_TEST_FIXTURES=false
TEST_FIXTURES_PATH=./tests/fixtures

# Profiling and debugging
ENABLE_PROFILING=false
PROFILING_OUTPUT_PATH=./profiling

# =============================================================================
# Security and Compliance
# =============================================================================

# Enable encryption at rest
ENABLE_ENCRYPTION_AT_REST=false

# Data retention policies (days)
DATA_RETENTION_DAYS=2555  # 7 years

# Audit logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555

# Compliance settings
COMPLIANCE_MODE=false
DATA_CLASSIFICATION=internal

# =============================================================================
# Performance Tuning
# =============================================================================

# Memory management
MAX_MEMORY_USAGE_PERCENT=80
ENABLE_MEMORY_MONITORING=true

# Connection pooling
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT_SECONDS=30

# Caching
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# Rate limiting (global overrides)
GLOBAL_RATE_LIMIT_REQUESTS_PER_SECOND=1000
GLOBAL_RATE_LIMIT_REQUESTS_PER_MINUTE=60000

# =============================================================================
# Deployment Environment
# =============================================================================

# Deployment profile (development, staging, production, high_volume)
DEPLOYMENT_PROFILE=production

# Environment identification
ENVIRONMENT_NAME=production
ENVIRONMENT_REGION=us-east-1
ENVIRONMENT_AVAILABILITY_ZONE=us-east-1a

# Feature flags
ENABLE_CANARY_DATASETS=true
ENABLE_SCHEMA_VALIDATION=true
ENABLE_DATA_QUALITY_CHECKS=true

# =============================================================================
# Integration Settings
# =============================================================================

# Vault configuration (for secrets management)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here
VAULT_MOUNT_SECRET=secret
VAULT_MOUNT_KV=kv

# External service endpoints
ELASTICSEARCH_URL=http://localhost:9200
REDIS_URL=redis://localhost:6379
GRAFANA_URL=http://localhost:3000

# Notification settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here
EMAIL_NOTIFICATIONS=admin@yourcompany.com

# =============================================================================
# Notes:
#
# 1. This is a template file. Copy to .env.local and customize for your environment.

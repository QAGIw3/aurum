# CAISO load observations â†’ Kafka (Avro)

env {
  job.mode = "BATCH"
  parallelism = 1
}

source {
  Http {
    url = "${CAISO_LOAD_ENDPOINT}"
    method = "GET"
    headers {
      Authorization = "${CAISO_LOAD_AUTH_HEADER}"
    }
    params {
      start = "${CAISO_LOAD_INTERVAL_START}"
      end = "${CAISO_LOAD_INTERVAL_END}"
      ${CAISO_LOAD_EXTRA_PARAM_KEY} = "${CAISO_LOAD_EXTRA_PARAM_VALUE}"
    }
    connection_timeout_ms = 20000
    retry = 12
    format = "json"
    schema = { fields { ${CAISO_LOAD_START_FIELD} = string ${CAISO_LOAD_END_FIELD} = string ${CAISO_LOAD_AREA_FIELD} = string ${CAISO_LOAD_MW_FIELD} = string } }
    jsonpath = "${CAISO_LOAD_JSONPATH}"
    result_table_name = "caiso_load_raw"
  }
}

transform {
  Sql {
    source_table_name = "caiso_load_raw"
    result_table_name = "caiso_load_normalized"
    query = """
      SELECT
        'CAISO' AS iso_code,
        CAST(${CAISO_LOAD_AREA_EXPR} AS STRING) AS area,
        CAST(UNIX_TIMESTAMP(${CAISO_LOAD_START_EXTRACT}, '${CAISO_LOAD_TIME_FORMAT}') * 1000000 AS BIGINT) AS interval_start,
        CAST(UNIX_TIMESTAMP(${CAISO_LOAD_END_EXTRACT}, '${CAISO_LOAD_TIME_FORMAT}') * 1000000 AS BIGINT) AS interval_end,
        CAST(TIMESTAMPDIFF(MINUTE, ${CAISO_LOAD_START_EXTRACT}, ${CAISO_LOAD_END_EXTRACT}) AS INT) AS interval_minutes,
        CAST(${CAISO_LOAD_MW_EXPR} AS DOUBLE) AS mw,
        CAST(UNIX_TIMESTAMP() * 1000000 AS BIGINT) AS ingest_ts,
        NULL AS metadata
      FROM caiso_load_raw
    """
  }
}

sink {
  Kafka {
    plugin_input = "caiso_load_normalized"
    bootstrap.servers = "${AURUM_KAFKA_BOOTSTRAP_SERVERS}"
    topic = "${CAISO_LOAD_TOPIC}"
    semantic = "AT_LEAST_ONCE"
    format = "avro"
    avro {
      use.schema.registry = true
      schema.registry.url = "${AURUM_SCHEMA_REGISTRY_URL}"
      value.schema.subject = "${CAISO_LOAD_SUBJECT}"
      value.schema = """${ISO_LOAD_SCHEMA}"""
      # Key configuration for message routing and partitioning
      key.serializer = "${CAISO.CONF_KEY_SERIALIZER:-string}"
      key.format = "${CAISO.CONF_KEY_FORMAT:-json}"
    }
  }
}


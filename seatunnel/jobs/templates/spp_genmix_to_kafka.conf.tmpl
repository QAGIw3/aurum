# SPP generation mix â†’ Kafka (Avro)

env {
  job.mode = "BATCH"
  parallelism = 1
}

source {
  Http {
    url = "${SPP_GENMIX_ENDPOINT}"
    method = "GET"
    headers {
      Authorization = "${SPP_GENMIX_AUTH_HEADER}"
    }
    params {
      start = "${SPP_GENMIX_INTERVAL_START}"
      end = "${SPP_GENMIX_INTERVAL_END}"
      ${SPP_GENMIX_EXTRA_PARAM_KEY} = "${SPP_GENMIX_EXTRA_PARAM_VALUE}"
    }
    connection_timeout_ms = 20000
    retry = 12
    format = "json"
    schema = { fields { ${SPP_GENMIX_ASOF_FIELD} = string ${SPP_GENMIX_FUEL_FIELD} = string ${SPP_GENMIX_MW_FIELD} = string } }
    jsonpath = "${SPP_GENMIX_JSONPATH}"
    result_table_name = "spp_genmix_raw"
  }
}

transform {
  Sql {
    source_table_name = "spp_genmix_raw"
    result_table_name = "spp_genmix_normalized"
    query = """
      SELECT
        'SPP' AS iso_code,
        CAST(UNIX_TIMESTAMP(${SPP_GENMIX_ASOF_EXTRACT}, '${SPP_GENMIX_TIME_FORMAT}') * 1000000 AS BIGINT) AS asof_time,
        TRIM(UPPER(CAST(${SPP_GENMIX_FUEL_EXPR} AS STRING))) AS fuel_type,
        CAST(${SPP_GENMIX_MW_EXPR} AS DOUBLE) AS mw,
        '${SPP_GENMIX_UNIT}' AS unit,
        CAST(UNIX_TIMESTAMP() * 1000000 AS BIGINT) AS ingest_ts,
        NULL AS metadata
      FROM spp_genmix_raw
    """
  }
}

sink {
  Kafka {
    plugin_input = "spp_genmix_normalized"
    bootstrap.servers = "${AURUM_KAFKA_BOOTSTRAP_SERVERS}"
    topic = "${SPP_GENMIX_TOPIC}"
    semantic = "AT_LEAST_ONCE"
    format = "avro"
    avro {
      use.schema.registry = true
      schema.registry.url = "${AURUM_SCHEMA_REGISTRY_URL}"
      value.schema.subject = "${SPP_GENMIX_SUBJECT}"
      value.schema = """${ISO_GENMIX_SCHEMA}"""
      # Key configuration for message routing and partitioning
      key.serializer = "${SPP.CONF_KEY_SERIALIZER:-string}"
      key.format = "${SPP.CONF_KEY_FORMAT:-json}"
    }
  }
}

